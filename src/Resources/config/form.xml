<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="yproximite_influx_db.form.type" class="Yproximite\InfluxDbBundle\Form\Type\AbstractInfluxChoiceType"
                 abstract="true">
            <call method="setConnectionRegistry">
                <argument type="service" id="yproximite_influx_db.connection_registry" />
            </call>
        </service>

        <service id="yproximite_influx_db.form.type.field_key" class="Yproximite\InfluxDbBundle\Form\Type\FieldKeyType"
                 parent="yproximite_influx_db.form.type">
            <tag name="form.type" />
        </service>

        <service id="yproximite_influx_db.form.type.measurement" class="Yproximite\InfluxDbBundle\Form\Type\MeasurementType"
                 parent="yproximite_influx_db.form.type">
            <tag name="form.type" />
        </service>

        <service id="yproximite_influx_db.form.type.tag_key" class="Yproximite\InfluxDbBundle\Form\Type\TagKeyType"
                 parent="yproximite_influx_db.form.type">
            <tag name="form.type" />
        </service>

        <service id="yproximite_influx_db.form.type.tag_value" class="Yproximite\InfluxDbBundle\Form\Type\TagValueType"
                 parent="yproximite_influx_db.form.type">
            <tag name="form.type" />
        </service>

    </services>
</container>
